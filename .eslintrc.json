{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/no-unresolved": 0,
    "quotes": [
      1,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "no-undef": 2,
    "global-strict": 0,
    "no-extra-semi": 2,
    "semi": [
      2,
      "never"
    ],
    "no-underscore-dangle": 0,
    "no-console": 1,
    "no-debugger": 1,
    "no-unused-vars": [
      "warn",
      {
        "varsIgnorePattern": "_"
      }
    ],
    "no-shadow": 0,
    "no-unused-expressions": 0,
    "consistent-return": 0,
    "prefer-destructuring": 0,
    "no-useless-constructor": 0,
    "max-len": 0,
    "prefer-const": 2,
    "no-trailing-spaces": [
      1,
      {
        "skipBlankLines": true
      }
    ],
    "no-unreachable": 1,
    // "no-alert": 1,
    // "class-methods-use-this": [
    //   2,
    //   {
    //     "exceptMethods": [
    //       "render"
    //     ]
    //   }
    // ]
  },
  "globals": {
    "tinymce": true,
    "__dirname": true
  }
}
